{% if parameter.reflectionParameter.defaultValueAvailable %}<span style="color: #737373;">[</span>{% endif %}
{% if parameter.reflectionParameter.passedByReference %}&{% endif %}
{% if parameter.reflectionParameter.type %}
    {% if parameter.reflectionParameter.type.allowsNull %}?{% endif %}
    {% if parameter.reflectionParameter.type.builtin %}
        <span style="color: #693;">{{ parameter.reflectionParameter.type.name }}</span>
    {% else %}
        {% if parameter.typeClass.internal %}
            <span style="color: #737373; border-bottom: 1px solid;">\{{ parameter.typeClass.shortName }}</span>
        {% else %}
            <a href="{{ parameter.typeClass.name | class_url(version) }}" style="color: #369; border-bottom: 1px solid;">{{ parameter.typeClass.shortName }}</a>
        {% endif %}
    {% endif %}
    <span style="color: #369;">${{ parameter.reflectionParameter.name }}</span>
    {% if parameter.reflectionParameter.defaultValueAvailable %}
        <span>=</span>
        {% if parameter.reflectionParameter.defaultValue == null %}<span>null</span>{% endif %}
    {% endif %}

{% endif %}

{% if parameter.reflectionParameter.defaultValueAvailable %}<span style="color: #737373;">]</span>{% endif %}